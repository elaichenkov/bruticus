{
  "name": "bruticus",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "version": "npm run format",
    "build": "tsc",
    "test": "npx test",
    "prettier": "prettier '(src|tests)/**/*.ts'",
    "prettier:fix": "prettier --write '(src|tests)/**/*.ts'",
    "eslint:fix": "eslint --fix '{src,tests}/**/*.ts'",
    "format": "npm run prettier:fix && npm run eslint:fix",
    "docs": "npx typedoc && touch ./docs/.nojekyll",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elaichenkov/bruticus.git"
  },
  "author": "Yevhen Laichenkov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/elaichenkov/bruticus/issues"
  },
  "homepage": "https://github.com/elaichenkov/bruticus#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "camelcase": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "jscodeshift": "^0.12.0",
    "prettier": "^2.3.1",
    "release-it": "^14.10.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.3.4"
  }
}
